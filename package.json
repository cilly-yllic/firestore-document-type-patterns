{
  "name": "@cilly-yllic/firestore-document-type-partterns",
  "version": "3.1.0",
  "type": "module",
  "description": "",
  "keywords": [
    "firebase",
    "firestgore",
    "security rule",
    "unit test",
    "document",
    "field type",
    "pattern"
  ],
  "main": "./dist/core.js",
  "types": "./dist/types.js",
  "engines": {
    "node": ">=18.x"
  },
  "publishConfig": {
    "access": "restricted",
    "registry": "https://npm.pkg.github.com/cilly-yllic"
  },
  "sideEffects": false,
  "scripts": {
    "prepare": "husky install",
    "test": "npm-run-all test:jest prettier:check lint",
    "lint": "eslint . --ext ts,tsx",
    "ci:update-version": "zx ./scripts/ci/update-version.mjs",
    "prettier": "prettier --write .",
    "prettier:check": "prettier --check .",
    "jest": "jest --passWithNoTests --silent false --verbose false",
    "test:jest": "firebase emulators:exec --only firestore \"npm run jest\"",
    "test:jest:file": "firebase emulators:exec --only firestore \"npm run jest ${npm_config_file}\"",
    "build": "run-s build:{lint,jest,clean,tsc,generate}",
    "build:publish": "run-s build:{clean,tsc,generate}",
    "build:lint": "npm run lint",
    "build:jest": "npm run test:jest",
    "build:clean": "npm run clean",
    "build:tsc": "npm run tsc",
    "build:generate": "npm run generate",
    "clean": "rimraf ./dist ./core ./types",
    "tsc": "tsc --build tsconfig.publish.json",
    "generate": "node ./scripts/generate-alias.cjs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cilly-yllic/firestore-document-type-patterns.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/cilly-yllic/firestore-document-type-patterns/issues"
  },
  "homepage": "https://github.com/cilly-yllic/firestore-document-type-patterns#readme",
  "exports": {
    ".": "./dist/**/*.js",
    "./core": "./dist/core.js",
    "./types": "./dist/types.js",
    "./package.json": "./package.json"
  },
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^5.1.1",
    "@firebase/rules-unit-testing": "^3.0.0",
    "uuid": "^9.0.0",
    "zx": "^7.2.3"
  },
  "devDependencies": {
    "@babel/core": "^7.22.9",
    "@babel/plugin-transform-modules-commonjs": "^7.22.5",
    "@babel/preset-env": "^7.22.9",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.5",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "babel-jest": "^29.6.1",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-unused-imports": "^3.0.0",
    "fs-extra": "^11.1.1",
    "husky": "^8.0.3",
    "jest": "^29.6.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.0",
    "shx": "^0.3.4",
    "ts-jest": "^29.1.1",
    "typescript": "^5.1.6"
  },
  "files": [
    "!**/__tests__",
    "!src/firestore/**",
    "dist",
    "core",
    "types",
    "src",
    "package.json",
    "README.md",
    "tsconfig.json"
  ]
}
