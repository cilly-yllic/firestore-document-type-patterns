{
  "compilerOptions": {
    "target": "esNext",
    "module": "NodeNext",
    "types": ["jest", "node"],
    "moduleResolution": "NodeNext",
    "allowJs": true,
    "checkJs": false,
    "declaration": true,
    "strict": true,
    "outDir": "lib",
    "rootDir": "./src",
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types", "src/types"],
    "baseUrl": "./",
    "paths": {}
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.spec.ts", "src/**/__tests__/**", "src/firestore/**"]
}
